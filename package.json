{
  "name": "@rescript-react-native/webview",
  "description": "ReScript bindings for react-native-webview.",
  "version": "10.8.1",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react-native-webview": "^10.8.0"
  },
  "author": "sgny (https://github.com/sgny)",
  "repository": "https://github.com/rescript-react-native/webview.git",
  "license": "MIT",
  "keywords": [
    "rescript",
    "react-native",
    "react-native-webview",
    "webview"
  ],
  "files": [
    "*.md",
    "bsconfig.json",
    "src/**/*.res",
    "src/**/*.resi",
    "src/**/*.js",
    "!src/**/*.bs.js"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.res\" -or -name \"*.resi\" | grep -v \"node_modules\" | xargs rescript format",
    "format": "yarn format:most && yarn format:re",
    "re:start": "rescript build -w",
    "re:build": "rescript build",
    "re:clean-build": "rescript clean && rescript build",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build",
    "release": "npmpub"
  },
  "devDependencies": {
    "rescript": "^9.1.4",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "npmpub": "^5.0.0",
    "prettier": "^2.0.0",
    "@rescript/react": "^0.10.0",
    "rescript-react-native": "^0.64.3"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ],
    "*.{res,resi}": [
      "rescript format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
